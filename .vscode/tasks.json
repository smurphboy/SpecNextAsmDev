{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with SJasmplus",
            "type": "shell",
            "command": "~/opt/bin/sjasmplus",
            "args": [
                "--nobanner",
                "${file}"
            ],
            "problemMatcher": ["$errmatcher-sjasmplus"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}